---
interface Props {
    ownerImage: string;
    ownerName: string;
    ownerStatus: string;
    title: string;
    text: string;
    bgClass: string;
}

const { ownerImage, ownerName, ownerStatus, title, text, bgClass} = Astro.props;
---

<div class={`tile ${bgClass}`}>
    <div class="tile__owner">
        <div class="tile__owner-imageContainer">
            <img class="tile__owner-image" src={ownerImage} alt="">
        </div>
        <div class="tile__owner-details">
            <div class="tile__owner-name">{ownerName}</div>
            <div class="tile__owner-status">{ownerStatus}</div>
        </div>
    </div>
    <h1 class="tile__title">{title}</h1>
    <p class="tile__text">{text}</p>
</div>

<style lang="scss">
    .tile {
        border-radius: 8px;
        padding: 26px 32px 32px 32px;
        box-shadow: 40px 60px 50px -47px rgba(72, 85, 106, 0.25);
        max-width: 600px;

        &__owner {
            display: flex;
            gap: 17px;
            align-items: center;
            margin-bottom: 18px;

            &-imageContainer {
                flex-shrink: 0;
            }

            &-image {
                height: 28px;
                width: 28px;
                border-radius: 50%;
            }

            &-details {
                line-height: 1;
            }

            &-status {
                opacity: 0.5;
            }
        }

        &__title {
            font-size: var(--fs-header);
            margin-bottom: 16px;
            font-weight: var(--fw-bold);
        }

        &__text {
            opacity: 0.7;
            line-height: 18px;
        }

        // STYLES BASED ON PROPS CLASS

        &.purple {
            background-color: var(--clr-purple);
            color: var(--clr-100);
        }
        &.gray {
            background-color: var(--clr-600);
            color: var(--clr-100);
        }
        &.light {
            background-color: var(--clr-100);
            color: var(--clr-600);
        }
        &.dark {
            background-color: var(--clr-700);
            color: var(--clr-100);
        }

        &.dark, &.light {
            padding-bottom: 26px;

            .tile__title {
                margin-bottom: 24px;
            }
        }

        &.dark, &.purple {
            .tile__owner-imageContainer {
                position: relative;
                z-index: 1;

                &::after {
                    content: '';
                    position: absolute;
                    width: 32px;
                    height: 32px;
                    border-radius: 50%;
                    background-color: var(--clr-purple-light);
                    left: 50%;
                    top: 50%;
                    transform: translate(-50%, -50%);
                    z-index: -1;
                }
            }
        }

        // FIRST TILE IS 'MAIN'

        &:first-child {
            background-image: url('../images/bg-pattern-quotation.svg');
            background-repeat: no-repeat;
            background-position: top right 24px;

            @media (min-width: 1024px) {
                background-position: top right 80px;
            }

            .tile__title {
                margin-bottom: 40px;

                @media (min-width: 1024px) {
                    margin-bottom: 16px;
                }
            }
        }

        // ON-GRID PLACEMENT

        @media (min-width: 1024px) {
            &:nth-child(1) {
                grid-column: 1/3;
                grid-row: 1/2;
            }
            &:nth-child(4) {
                grid-row: 2/3;
                grid-column: 2/4;
            }
            &:nth-child(5) {
                grid-row: 1/3;
                grid-column: 4/5;
            }
        }
    }
</style>
